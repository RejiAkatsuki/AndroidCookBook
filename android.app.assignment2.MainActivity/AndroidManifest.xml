<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.app.assignment2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/notebook_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainView"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityRating"></activity>
        <activity android:name=".SingleListItem" >
            <intent-filter>
                <action android:name="android.intent.action.CALL" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TabHostActivity"></activity>
        <activity android:name=".SearchActivity"></activity>
        <activity android:name=".TopActivity"></activity>
        <activity android:name=".NewActivity"></activity>
    </application>

</manifest>